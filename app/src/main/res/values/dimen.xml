<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        To be used inside of the
        CatalogActivity
    -->

    <!-- Margin around the floating action button in CatalogActivity -->
    <dimen name="fab_margin">16dp</dimen>

    <!-- Padding for the bottom of the ListView-->
    <dimen name="listview_padding">16dp</dimen>
    <!-- The padding for the bottom of the empty state group view-->
    <dimen name="empty_state_bottom_padding">172dp</dimen>

    <!-- The padding for the start of the empty state group view-->
    <dimen name="empty_state_start_padding">56dp</dimen>

    <!-- The padding for the end of the empty state group view-->
    <dimen name="empty_state_end_padding">56dp</dimen>

    <!-- Dimensions of the image in the Empty State GroupView-->
    <dimen name="empty_state_image_dimension">48dp</dimen>

    <!-- Margin below the imageView of the empty state-->
    <dimen name="empty_state_image_margin">8dp</dimen>

    <!-- The padding the Group View that
         contains the text of the Empty state-->
    <dimen name="EmptyStateText_GV_top_padding">16dp</dimen>
    <dimen name="EmptyStateText_GV_bottom_padding">56dp</dimen>

    <!-- The dimensions for the empty state title-->
    <dimen name="empty_state_title_textsize">16sp</dimen>
    <dimen name="empty_state_title_padding">8dp</dimen>

    <!-- The Top padding of the empty state subtitle-->
    <dimen name="empty_state_subtitle_padding">4dp</dimen>


    <!--
        To be used in the
        List Item Layout
    -->

    <!-- Used for the dimensions of the product's ImageView -->
    <dimen name="product_image_dimension">88dp</dimen>
    <!--Size for the product name text -->
    <dimen name="primary_text_size">18sp</dimen>

    <!--Used for the right margin of the price textview -->
    <dimen name="margin_price_textview">16dp</dimen>

    <!--Size for the quantity and the price's text -->
    <dimen name="secondary_text_size">14sp</dimen>

    <!-- Value of the spacing between the groupview containing
         the text-->
    <dimen name="groupview_spacing">8dp</dimen>

    <!-- Height of the textViews -->
    <dimen name="text_view_dimension">40dp</dimen>

    <!--
        To be used in the
        Editor Activity Layout
    -->

    <!-- The Height of the Product Image -->
    <dimen name="product_image_height">200dp</dimen>

    <!-- Dimensions of the icons -->
    <dimen name="icon_dimensions">48dp</dimen>

    <!-- The margin to be used between views of the form-->
    <dimen name="view_margin">8dp</dimen>

    <!-- Size of the text in that displays informations
         related to the Quantity-->
    <dimen name="quantity_text_size">18sp</dimen>

    <!-- Padding to use on the left of the Quantity Value TextView-->
    <dimen name="quantity_padding">4dp</dimen>

    <!-- Margin to use on top of the fields group view-->
    <dimen name="form_top_margin">16dp</dimen>

    <!-- Side Padding for the container of the form's fields-->
    <dimen name="fields_container_padding">48dp</dimen>


</resources>